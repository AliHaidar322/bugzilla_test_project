<%= form_for @bug, url: bugs_update_status_path(@bug) ,class: 'form-horizontal' do |f| %>
  <div class="form-group">
    <%= f.label :status, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.select :status, Bug.statuses.keys, {}, class: 'form-control' %>
    </div>
  </div>
  <br>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit 'Update Status', class: 'btn btn-primary'%>
    </div>
  </div>
<% end %>