<div class="col-lg-6 mx-lg-auto my-lg-auto">
  <div class="card shadow text-white p-4 m-4" style="background-color: rgba(255, 255, 255, 0.1); padding-top: 20px; padding-bottom: 20px;">
    <div class="card-header">
      <h2 class="card-title text-center">Sign In</h2>
    </div>
    <div class="card-body mt-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group p-4">
          <%= f.label :email, class: 'mb-2' %>
          <%= f.text_field :email, class: "form-control form-control-lg" %>
        </div>

        <div class="form-group  p-4">
          <%= f.label :password, class: "mb-2" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
        </div>


        <div class="actions p-4">
          <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
        </div>
         <% if devise_mapping.rememberable? %>
          <div class="form-group mb-2 mt-2 pl-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>