<h1>Create a New Project</h1>
<%= form_for @project do |f| %>
 <div class="modal-body">
    <%= render 'layouts/errors', object: @project %>
    <div class="form-group">
      <%= f.label :name, "Project Name" do %>
        Project Name <%= content_tag(:span, '*', class: 'required') %>
      <% end %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :description, "Project Description" do %>
        Project Description <%= content_tag(:span, '*', class: 'required') %>
      <% end %>
      <%= f.text_area :description, class: "form-control"%>
    </div>
  </div>
  <br>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <%= f.submit "Create Project", class: "btn btn-primary", data_turbolinks_confirm: true %> 
  </div>
<% end %>