<h1>Create a New Project</h1>
<%= form_for @project do |f| %>
  <%= render 'layouts/errors', object: @project %>
  <div class="form-group">
    <%= f.label :name, "Project Name" do %>
      Project Name <%= content_tag(:span, '*', class: 'required') %>
    <% end %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Project Description" do %>
      Project Description <%= content_tag(:span, '*', class: 'required') %>
    <% end %>
    <%= f.text_area :description, class: "form-control", required: true %>
  </div>
  <br>

  <%= f.submit "Create Project", class: "btn btn-primary" %>
<% end %>
<br>
<%= link_to "Back to Projects", projects_path, class: "btn btn-secondary" %>
